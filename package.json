{
  "name": "task-manager-backend",
  "version": "0.0.1",
  "description": "API for Task Manager Application",
  "homepage": "https://codescript.us",
  "author": "CodeScript",
  "private": true,
  "license": "MIT",
  "contributors": [
    "Marcos PÃ­riz <marcos.piriz@codescript.us>",
    "Joself Blanco <joselfblanco@codescript.us>",
    "Juan Carlos Buendia <juan.buendia@codescript.us>"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/config/database/data-source.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js  migration:revert -d src/config/database/data-source.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --config ./src/config/jest/jest.config.js --watch --coverage",
    "test:openCoverage": "jest --config ./src/config/jest/jest.config.js --coverage && open ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose down"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.624.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/throttler": "^6.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.10",
    "@sendgrid/mail": "^7.7.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "bcrypt-ts": "^5.0.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "firebase-admin": "^12.4.0",
    "js-yaml": "^4.1.0",
    "mysql2": "^3.10.0",
    "nestjs-cls": "^4.4.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sendgrid": "^5.2.3",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.19.0",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.6",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
